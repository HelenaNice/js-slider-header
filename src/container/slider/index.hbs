{{!-- slider.hbs --}}

<div class="page">
    <main class="slider">
        <div class="slider__content">
            <img src="/img/01.jpg" class="slider__item" width="100%" height="100%">
            <img src="/img/02.jpg" class="slider__item" width="100%" height="100%">
            <img src="/img/03.jpg" class="slider__item" width="100%" height="100%">
            <img src="/img/04.jpg" class="slider__item" width="100%" height="100%">
        </div>

        <button class="slider__button slider__button--left"></button>
        <button class="slider__button slider__button--right"></button>
    </main>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const images = document.querySelectorAll('.slider__item');

        images.forEach(image => {
            const imageUrl = `https://picsum.photos/600/400?random=${Math.random()}`; // Fixed size 600x400 with random parameter
            image.src = imageUrl;
        });
    });
</script>